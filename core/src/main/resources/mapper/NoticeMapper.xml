<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.triplan.mapper.NoticeMapper">

    <insert id="noticeInsert">
        INSERT INTO notice(title, created_at, updated_at, content)
        VALUES (#{title}, #{createdAt}, #{updatedAt}, #{content})
    </insert>

    <select id="noticeSelect" resultType="com.triplan.domain.NoticeVO">
        select * from notice
        where notice_id = #{noticeId}
    </select>

    <update id="noticeUpdate">
        UPDATE notice
        SET
        title = #{title},
        updated_at = CURRENT_TIMESTAMP,
        content = #{content}
        where notice_id = #{noticeId}

    </update>

    <delete id="noticeDelete">
        DELETE FROM notice
        where notice_id = #{noticeId}
    </delete>


    <select id="noticeList" resultType="NoticeVO">
        SELECT *
        FROM notice
        WHERE target = #{target}
    </select>



</mapper>

